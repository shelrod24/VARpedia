                        <Region prefHeight="36.0" prefWidth="13.0" />
                        <Label fx:id="_outcome" prefHeight="28.0" prefWidth="81.0" />
                     </children>
                  </HBox>
               </children>
            </VBox>
         </bottom>
         <center>
            <AnchorPane fx:id="_anchor" maxWidth="-Infinity" minHeight="-Infinity" minWidth="-Infinity" prefHeight="326.0" prefWidth="700.0" BorderPane.alignment="CENTER">
               <children>
                  <MediaView fx:id="_view" fitHeight="380.0" fitWidth="700.0" />
