                           <opaqueInsets>
                              <Insets />
                           </opaqueInsets>
                        </Button>
                        <Button fx:id="_slower" minHeight="-Infinity" minWidth="-Infinity" mnemonicParsing="false" onAction="#SlowDown" prefWidth="100.0" style="-fx-background-color: #555555;" text="Slower  " textAlignment="CENTER" textFill="#f8f8f8cc" />
